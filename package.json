{
  "name": "vmp-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "test": "jest"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "bcrypt": "^4.0.1",
    "body-parser": "~1.18.2",
    "cookie-parser": "^1.4.5",
    "debug": "~2.6.9",
    "express": "~4.17.3",
    "fluent-ffmpeg": "^2.1.2",
    "jade": "~1.11.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.14",
    "morgan": "~1.9.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^3.0.2",
    "serve-favicon": "~2.4.5",
    "ytdl-core": "^2.1.2"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "eslint": "^6.8.0"
  }
}
